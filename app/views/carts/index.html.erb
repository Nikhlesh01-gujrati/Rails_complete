<h1>Carts#index</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Remove Product</th>
    </tr>
  </thead>
  <tbody>
  	<% @cart.each_with_index do |cartitems,index| %>
    <tr>
      <th scope="row"><%=index+1%></th>
      <td><%=cartitems.product.name%></td>
      <td><%=cartitems.product.price%></td>
      <td><%=cartitems.product.description%></td>
      <td><%=link_to "Remove Product", removeproduct_path(cartitems) %></td>
    </tr>
    <%end%>
  </tbody>
</table>
